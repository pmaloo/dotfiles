# get rid of command not found
alias cd..='cd ..'
#alias --='cd -'
# a quick way to get out of current directory
alias ..='cd ../../'
alias ...='cd ../../../'
alias .3='cd ../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../../'
alias .6='cd ../../../../../../'

# Most frequently visited directories
alias d="cd ~/Downloads/"
